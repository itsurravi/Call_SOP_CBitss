            app:atg_borderColor="@color/tag_color"
            app:atg_horizontalPadding="6dp"
            app:atg_horizontalSpacing="4dp"
            app:atg_textColor="#fff"
            app:atg_textSize="14sp"
            app:atg_verticalPadding="1dp"
            app:atg_verticalSpacing="2dp" />

